{
  "name": "server",
  "version": "1.0.0",
  "description": "INFO7255 Web API Server",
  "main": "src/server.ts",
  "scripts": {
    "clean:logs": "rm -rf logs",
    "clean": "rm -rf dist/",
    "build": "npm run clean && tsc -p tsconfig.production.json",
    "postbuild": "cp package*.json dist && cd dist && npm ci --production",
    "dev": "node --no-lazy -r ts-node/register/transpile-only src/server.ts",
    "start:pm2": "pm2 delete server || : && pm2 start server.js -i 1 --name 'server'",
    "start": "NODE_ENV=production node server.js",
    "lint": "eslint ./**/*.ts",
    "lint:fix": "eslint ./**/*.ts --fix",
    "test": "mocha --exit",
    "test:watch": "mocha --watch",
    "coverage": "nyc --all --reporter=text npm run test"
  },
